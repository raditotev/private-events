<h1 class="center">Create event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @event, html: {class: "form-horizontal"} do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :title, class: "control-label col-sm-4" %>
      <%= f.text_field :title, class: "col-sm-8"  %>
    </div>

    <div class="form-group">
      <%= f.label :event_date, class: "control-label col-sm-4" %>
      <%= f.date_field :date, class: "col-sm-8"  %>
    </div>

    <div class="form-group">
      <%= f.label :location, class: "control-label col-sm-4" %>
      <%= f.text_field :location, class: "col-sm-8"  %>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "control-label col-sm-4" %>
      <%= f.text_field :description, class: "col-sm-8"  %>
    </div>

    <div class="center">
      <%= f.submit "Create event", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>


