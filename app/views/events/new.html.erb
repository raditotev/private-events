<h1>Create event</h1>

<%= form_for @event do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :event_date %>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit "Create event" %>
  </p>
<% end %>
